        @********************************************@
        :root {
    --primary-color: #4361ee;
    --secondary-color: #3f37c9;
    --chat-bg: #f8f9fa;
    --message-bg: #e9ecef;
}

body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
    height: 100vh;
}

/* Container styles */
.chat-container {
    height: calc(100vh - 72px); /* Adjust based on your navbar height */
    display: flex;
    margin: 0;
    padding: 0;
    width: 100%;
}

/* Sidebar styles */
.chat-sidebar {
    width: 250px;
    background: white;
    border-right: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.sidebar-header {
    padding: 15px;
    border-bottom: 1px solid #ddd;
}

.chat-image {
    max-width: 80px;
    margin: 10px auto;
    display: block;
}

.sidebar-content {
    padding: 15px;
    overflow-y: auto;
    flex: 1;
}

.participants-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.participants-list {
    list-style: none;
    padding: 0;
}

.participant-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}

/* Main chat area styles */
.chat-main {
    flex: 1;
    background: var(--chat-bg);
    display: flex;
    flex-direction: column;
    height: 100%;
}

.messages-wrapper {
    flex: 1;
    overflow: hidden;
    position: relative;
}

.messages {
    height: 100%;
    overflow-y: auto;
    padding: 15px;
    padding-bottom: 70px; /* Add extra padding at the bottom to prevent messages from being hidden */
    display: flex;
    flex-direction: column;
}

/* Message styles */
.message-card {
    padding: 10px;
    margin: 5px 0;
    border-radius: 10px;
    max-width: 80%;
    word-wrap: break-word;
}

.sent-message {
    background: var(--primary-color);
    color: white;
    margin-left: auto;
}

.received-message {
    background: var(--message-bg);
    margin-right: auto;
}

/* Input area styles */
.chat-input {
    padding: 15px;
    background: white;
    border-top: 1px solid #ddd;
}

.input-group {
    display: flex;
    gap: 10px;
}

#messageInput {
    flex: 1;
}

/* Add this to ensure the last message is visible */
#messagesEnd {
    height: 20px; /* Add some height to ensure scrolling works properly */
}

/* Selected users styles */
.selected-users {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    min-height: 40px;
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.selected-user-tag {
    background-color: var(--primary-color);
    color: white;
    padding: 2px 8px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.remove-user {
    cursor: pointer;
    font-size: 12px;
}

/* Make sure the container takes full width in mobile view */
   

    .chat-input {
        padding: 10px;
    }

    .message-card {
        max-width: 90%;
    }
}
        @********************************************@
         /* Add these styles to your existing CSS */
    .chat-actions {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }
    
    .selected-user-tag {
        background-color: var(--primary-color);
        color: white;
        padding: 2px 8px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 5px;
        margin: 2px;
    }

    .remove-user {
        cursor: pointer;
        font-size: 12px;
    }
    
