<div class="chat-container">
    <div class="chat-sidebar">
        <div class="p-3 border-bottom">
            <h5>Chats</h5>
            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newChatModal">
                <i class="fas fa-plus"></i>
            </button>
        </div>

        <div class="list-group">
            @foreach (var chat in Model.Chats)
            {
                <a href="@Url.Action("Chat", new { id = chat.Id })" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">@chat.Name</h6>
                        <small>@chat.LastMessageTime</small>
                    </div>
                    <p class="mb-1 small text-truncate">@chat.LastMessage</p>
                    @if (chat.UnreadCount > 0)
                    {
                        <span class="badge bg-primary rounded-pill">@chat.UnreadCount</span>
                    }
                </a>
            }
        </div>
    </div>

    <div class="chat-main">
        @if (Model.CurrentChat != null)
        {
            <div id="messages" class="p-3">
                @foreach (var message in Model.CurrentChat.Messages)
                {
                    <div class="d-flex @(message.IsSentByUser ? "justify-content-end" : "justify-content-start") mb-3">
                        <div class="message-card @(message.IsSentByUser ? "sent-message" : "received-message")">
                            <div class="small text-muted">@message.SenderName</div>
                            <p class="mb-1">@message.Content</p>
                            <div class="small text-muted">@message.TimeSent</div>
                        </div>
                    </div>
                }
            </div>

            <div class="chat-input">
                <div class="input-group">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type a message..." />
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal for new chat -->
<div class="modal fade" id="newChatModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Chat</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Add your form here -->
            </div>
        </div>
    </div>
</div>