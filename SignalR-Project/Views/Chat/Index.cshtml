@model IEnumerable<SignalR_Project.ViewModels.ChatViewModel>
@{
    ViewData["Title"] = "Chat Dashboard";
    Layout = "_ChatLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex align-items-center">
                    <h1 class="mb-0 flex-grow-1">Your Chats</h1>
                    <div class="btn-group">
						<a asp-action="NewChat">
							<button class="btn btn-primary me-2" >
								<i class="fas fa-user-plus"></i> New Chat
							</button>
						</a>
						<a asp-action="NewGroup">
							<button class="btn btn-primary" >
								<i class="fas fa-users"></i> New Group
							</button>
						</a>
                        
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p>You don't have any chats yet.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var chat in Model)
                            {
                                <a href="@Url.Action("Chat", new { id = chat.Chat_Id })" class="list-group-item list-group-item-action">
                                    <div class="d-flex align-items-center">
                                        <img src="@chat.Chat_Image" alt="@chat.Chat_Name" class="rounded-circle me-3" width="40" height="40">
                                        <div class="flex-grow-1">
                                            <h5 class="mb-1">@chat.Chat_Name</h5>
                                            <p class="mb-1 small text-muted">
                                                @if (!string.IsNullOrEmpty(chat.LastMessage))
                                                {
                                                    @chat.LastMessage
                                                }
                                                else
                                                {
                                                    <span>No messages yet</span>
                                                }
                                            </p>
                                        </div>
                                        <div>
                                            <small>@chat.LastMessageTime?.ToString("HH:mm")</small>
                                            @if (chat.UnreadCount > 0)
                                            {
                                                <span class="badge bg-primary rounded-pill ms-2">@chat.UnreadCount</span>
                                            }
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
 

 